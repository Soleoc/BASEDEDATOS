<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inscripcion.controller.MainController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <top>
        <VBox spacing="10">
            <Label text="Sistema de Inscripción de Estudiantes" style="-fx-font-size: 20; -fx-font-weight: bold;" />
            <Separator />
        </VBox>
    </top>
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Estudiantes" fx:id="tabEstudiantes" />
            <Tab text="Cursos" fx:id="tabCursos" />
            <Tab text="Inscripciones" fx:id="tabInscripciones" />
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" />
            </padding>
            <Label text="© 2023 Sistema de Inscripción" />
        </HBox>
    </bottom>
</BorderPane>